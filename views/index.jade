doctype html
html(lang='en')
  head
    title Mobile System
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='keywords', content='Statistics UI Kit Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,\
    Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design')
    script(type='application/x-javascript').
      addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
      }, false);
      function hideURLbar() {
        window.scrollTo(0, 1);
      }
    // bootstrap-css
    link(href='./css/bootstrap.css', rel='stylesheet', type='text/css', media='all')
    // // bootstrap-css
    // css
    link(rel='stylesheet', href='./css/style.css', type='text/css', media='all')
    // // css
    // font-awesome icons
    link(href='./css/font-awesome.css', rel='stylesheet')
    // //font-awesome icons
    // font
    link(href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic', rel='stylesheet', type='text/css')
    // //font
    script(src='./js/jquery-1.11.3.min.js')
    script(src='./js/bootstrap.js')
    // circle
    script(src='./js/circliful.js')
    script.
      $(document).ready(function () { // 6,32 5,38 2,34
        $("#test-circle").circliful({
          animation: 1,
          animationStep: 5,
          foregroundBorderWidth: 15,
          backgroundBorderWidth: 15,
          percent: 71,
          textSize: 28,
          text: 'New Users',
          textStyle: 'font-size: 12px;',
          textColor: '#666'
        });
      });
    // //circle
    // chart js
    script(src='./js/Chart.js')
    // //chart js
    script(src='./js/easyResponsiveTabs.js', type='text/javascript')
    script(type='text/javascript').
      $(document).ready(function () {
        $('#horizontalTab').easyResponsiveTabs({
          type: 'default', //Types: default, vertical, accordion
          width: 'auto', //auto or any width like 600px
          fit: true   // 100% fit in a container
        });
      });
    // Calender
    link(rel='stylesheet', href='./css/clndr.css', type='text/css')
    script(src='./js/underscore-min.js')
    script(src='./js/moment-2.2.1.js')
    script(src='./js/clndr.js')
    script(src='./js/site.js')
    // End Calender
    // chart-grid-left
    link(rel='stylesheet', href='./css/master.css')
    script(src='./js/d3.min.js')
    script(src='./js/xcharts.min.js')
    script(src='./js/rainbow.min.js')
    // //chart-grid-left
    // fabochart
    link(href='./css/fabochart.css', rel='stylesheet', type='text/css')
    // //fabochart
    // animate
    link(href='./css/animate.css', rel='stylesheet', type='text/css', media='all')
    script(src='./js/wow.min.js')
    script.
      new WOW().init();
    // //end-animate
    // MoblieSystem Libs
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js')
    script(src='./javascripts/moblieSystem.js')
    // end MobileSystem Libs
  body(ng-app='MobileSystem', ng-controller='connectCtrl')
    .information-tabs.wow.fadeInRight.animated(data-wow-delay='.5s')
      #verticalTab.resp-vtabs(style='display: block; width: 100%; margin: 0px;')
        // start vertical Tabs
        ul.resp-tabs-list
          li.resp-tab-item.resp-tab-active(aria-controls='tab_item-0', role='tab')
            i.fa.fa-sun-o
          li.resp-tab-item(aria-controls='tab_item-1', role='tab')
            i.fa.fa-info
          li.resp-tab-item(aria-controls='tab_item-2', role='tab')
            i.fa.fa-camera
          li.resp-tab-item(aria-controls='tab_item-3', role='tab')
            i.fa.fa-heart
          li.resp-tab-item(aria-controls='tab_item-4', role='tab')
            i.fa.fa-map-marker
        .resp-tabs-container
          h2.resp-accordion.resp-tab-active(role='tab', aria-controls='tab_item-0')
            span.resp-arrow
            i.icon_1
          h2.resp-accordion(role='tab', aria-controls='tab_item-1')
            span.resp-arrow
          .new_posts.resp-tab-content.resp-tab-content-active(aria-labelledby='tab_item-0', style='display:block;')
            .follow-heading
              h3 온습도계
            .contact-right-top(ng-init='refresh();')
              .col-xs-6.user-grid
                .user-grid-info
                  h3.wow.fadeInLeft.animated(data-wow-delay='.5s') 온도
                  p.wow.fadeInRight.animated(data-wow-delay='.5s') {{env.temp}}°C
                  .progress
                    .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', ng-style="{width:env.temp+'%'}")
              .col-xs-6.user-grid.view-grid
                .user-grid-info.view-grid-info
                  h3.wow.fadeInLeft.animated(data-wow-delay='.5s') 습도
                  p.wow.fadeInRight.animated(data-wow-delay='.5s') {{env.hum}}%
                  .progress
                    .progress-bar.view-grid-info-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', ng-style="{width:env.hum+'%'}")
              .clearfix
          h2.resp-accordion(role='tab', aria-controls='tab_item-2')
            span.resp-arrow
            i.icon_2
          h2.resp-accordion(role='tab', aria-controls='tab_item-3')
            span.resp-arrow
          .new_posts.resp-tab-content(aria-labelledby='tab_item-1')
            .col.col-4
              .follow-heading
                h3 도어락 상태
              .vertical_post
                .vert-top(ng-repeat='x in door')
                  li.se {{getDoorStatusStr(x.isOpen)}}
                  li.hom {{ x.time|date:'yyyy-MM-dd HH:mm:ss'}}
                  .clearfix
          h2.resp-accordion(role='tab', aria-controls='tab_item-4')
            span.resp-arrow
            i.icon_3
          h2.resp-accordion(role='tab', aria-controls='tab_item-5')
            span.resp-arrow
          .new_posts.resp-tab-content(aria-labelledby='tab_item-2')
            .follow-heading
              h3 스위치 컨트롤
            .vert-top(ng-repeat='x in switch')
              li.se Switch {{x.num}}
              li.hom
                button.btn-sm.btn-info(ng-click='changeSwitch(x.num)')
                  | {{x.status}}
              .clearfix
          h2.resp-accordion(role='tab', aria-controls='tab_item-6')
            span.resp-arrow
            i.icon_4
          h2.resp-accordion(role='tab', aria-controls='tab_item-7')
            span.resp-arrow
          .new_posts.resp-tab-content(aria-labelledby='tab_item-3')
            .follow-heading
              h3 Information
            .vertical_post
              .vert-top
                li.se Name
                li.hom Adam
                .clearfix
              .vert-top
                li.se Rooms
                li.hom 1
                .clearfix
              .vert-top
                li.se Sex
                li.hom Male
                .clearfix
              .vert-top
                li.se Date of birth
                li.hom 24 July 1989
                .clearfix
              .vert-top
                li.se Marital status
                li.hom Married
                .clearfix
          h2.resp-accordion(role='tab', aria-controls='tab_item-8')
            span.resp-arrow
            i.icon_4
          h2.resp-accordion(role='tab', aria-controls='tab_item-9')
            span.resp-arrow
          .new_posts.resp-tab-content(aria-labelledby='tab_item-4')
            .follow-heading
              h3 Location
            .map
              iframe(src='https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3771907.975236311!2d-2.09480472072984!3d39.07355564363949!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1436857347604', frameborder='0', style='border:0', allowfullscreen='')
        .clearfix
      script(src='./js/easyResponsiveTabs.js')
      script(type='text/javascript').
        $(document).ready(function () {
          $('#horizontalTab').easyResponsiveTabs({
            type: 'default', //Types: default, vertical, accordion
            width: 'auto', //auto or any width like 600px
            fit: true,   // 100% fit in a container
            closed: 'accordion', // Start closed if in accordion view
            activate: function (event) { // Callback function if tab is switched
              var $tab = $(this);
              var $info = $('#tabInfo');
              var $name = $('span', $info);
              $name.text($tab.text());
              $info.show();
            }
          });
          $('#verticalTab').easyResponsiveTabs({
            type: 'vertical',
            width: 'auto',
            fit: true
          });
        });
