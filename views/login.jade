    script.
      new WOW().init();
    // //end-animate
    // MoblieSystem Libs
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js')
    script(src='./javascripts/login.js')
    // end MobileSystem Libs
  body
    .contact-right-middle
      .contact-right-middle-heading.wow.fadeInUp.animated(data-wow-delay='.5s')
        h3 Login
      .login-info
        form(action='/login', method='post')
          input.wow.fadeInUp.animated(data-wow-delay='.5s', type='text', name='id', placeholder='Email', required='')
          input.wow.fadeInUp.animated(data-wow-delay='.5s', type='password', name='passwd', placeholder='Password')
          .forgot-top-grids
            .forgot-grid.wow.fadeInLeft.animated(data-wow-delay='.5s')
              ul
                li
                  input#brand1(type='checkbox', value='')
                  label(for='brand1')
                    span
                    | Remember me
            .forgot.wow.fadeInRight.animated(data-wow-delay='.5s')
              a(href='#') Forgot password?
            .clearfix
          input.wow.fadeInRight.animated(data-wow-delay='.5s', type='submit', name='Sign In', value='Login')
          hr
          h4 or
          .login-icons.wow.fadeInRight.animated(data-wow-delay='.5s')
            ul
              li
                a.facebook(href='#')
                  i.fa.fa-facebook
              li
                a.twitter(href='#')
                  i.fa.fa-twitter
              li
                a.google(href='#')
                  i.fa.fa-google-plus
